<h1>My Tasks</h1>

<p><%= @task.details %></p>
<p><%= @task.completed ? "✅ - This task is completed." : "❎ - This task is not completed."  %></p>
<%= link_to "Back to all tasks", tasks_path %>
<%= link_to "Edit Task", edit_task_path(@task) %>
<%= link_to "Delete Task ☠️", task_path(@task), method: :delete %>
